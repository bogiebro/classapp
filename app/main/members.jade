div(ng-if="group.maingroup")
  h4 Members
    form.pull-right
      input.form-control(type='text', placeholder="Search", ng-model="my.searchtext")
  div
    span(ng-repeat="usr in users[group.id] | userify: info | filter: my.searchtext")
      div.picsquare
        img.img-thumbnail(ng-src="{{usr.pic}}", width='80', height='80')
        p
          small {{usr.name}}
  h4 Subgroups
    button.btn.btn-xs.bitoff(type='button')
      span.glyphicon.glyphicon-plus
    h5.text-muted.indented No subgroups to display
  div.atbottom
    hr
    button.pull-right.btn.btn-xs.btn-danger(type='button', ng-click='removeUser()') Leave group
div(ng-if="!group.maingroup")
  form
    input(type='text', ng-model="group.name")
  div
    span(ng-repeat="usr in users[group.id] | filter: searchtext")
      div.picsquare
        img.img-thumbnail(ng-src="{{info[usr].pic}}", width='80', height='80')
        p
          small {{info[usr].name}
