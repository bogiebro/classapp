.groupContainer
  padding: 0px !important
  margin: 0px
.classList
  -webkit-border-radius 0px !important
  -moz-border-radius 0px !important
  border-radius 0px !important
  margin 0

.oneClass
  padding 0px
  height 100px
  text-align center
  border-top-right-radius 0px
  border-top-left-radius 0px
  -webkit-border-radius 0px !important
  -moz-border-radius 0px !important
  border-radius 0px !important
  background-color #f8f8f8
  position relative
  -webkit-transition-duration: 0.5s;
  font-size 11px

.oneClass:hover
  background-color #ffffff
  cursor pointer

.oneClass .toolBarContainer
  position absolute
  bottom 5px
  right 0px
  width 100%
  padding 0px

#toolIcon
  color gray
  size 9px
  margin-right 15px

#toolIcon:hover
  color black

.classSearchBar
  width 100%
  margin-bottom 0px

.greenText
  color #0B610B

.redText
  color #8A0808

#groupModal
  height 350px
  padding 2px

.groupModalDiv1
  width 69%
  margin 2px
  padding 2px
  height 330px
  float left
  display inline-block

.groupModalDiv2
  width 29%
  margin 2px
  padding 2px
  height 330px
  float left
  display inline-block

.groupModalMiddleDiv
  width 100%
  height 88%
  margin-bottom 5px !important
  
.groupModalBottomDiv1
  width 100%

.groupModalBottomDiv1 .shortInput
  width 30%
  display inline

.groupModalBottomDiv1 .longInput
  width 50%
  display inline

.groupModalDiv2 .groupModalBottomDiv2
  width 100%
  margin-bottom 0

.groupModalDiv2 .groupModalBottomDiv2 form
  width 100%
  margin 0px
  padding 0px

.loadingImg
  height 60px
  width 60px
  margin-top 100px

.allGroups
  margin 0px
  padding-top 5px
  margin-top 53px
  border-color #D8D8D8

.group
  padding 2px
  cursor pointer
  font-size 10px
  -webkit-transition-duration 0.3s
  background-color #A4A4A4
  margin-bottom 2px
  margin-right 2px
  width 47%
  float left

.group:hover
  background-color #DF0101

.group a, .group span
