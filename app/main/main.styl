body { padding-top: 70px; }

.ng-cloak, .x-ng-cloak {
  display: none !important;
}

.fullwidth
  max-width 100%;

.fullheight
  height 100%

.fillpage
  height 95%
  overflow hidden

.options
    position absolute
    bottom 10px
    right 10px

.spaced
    margin-left 10px

.tablescroll
  max-height 80%
  overflow-y scroll

.dropbox
    border 1px dashed
    padding 7px
    text-align center
    color gray

.smaller
    font-size small

.newdoc
  text-align center
  padding-left 10px

.faqhead
  margin-bottom 20px

.faq
  margin-left 20px
  max-width 900px

.indent
  margin-left 10px

@media (max-width: 750px) {
  div.mobilerow {
    margin-left: 0px;
    margin-right: 0px;
  }
}
