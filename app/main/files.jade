h3.text-center.text-muted(ng-show="files.$getIndex().length == 0") No filestable.table.table-striped(ng-show="files.$getIndex().length > 0")  thead    tr      th Filename      th Creator  tbody    tr(ng-repeat="file in files")      td        a(ng-href="{{file.ref}}", target="_blank") {{file.name}}      td {{file.creator}}.pull-right.hidden-xs  span(class="dropbox", ng-show="dropSupported",  ng-file-drop="onSelect($files);",  ng-file-drop-available="dropSupported=true")    span Drop File Here  span.newdoc or <a ng-click="createDoc()">create a new document</a>script(type='text/ng-template', id='nameId')  div.modal-header    h3 Name your document  div.modal-body    form(role='form', class='form-horizontal', ng-submit='namedDoc()')      input.form-control(type='text', ng-model='namer.name', placeholder='Untitled')  div.modal-footer