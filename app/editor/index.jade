html
  head
    meta(charset="utf-8")

    title Quipu Editor
    
    script(src="/js/vendor.js")
    script(src="https://cdn.firebase.com/v0/firebase.js")
    script(src='https://cdn.firebase.com/libs/angularfire/0.6.0/angularfire.min.js')

    script(src="/js/codemirror.js")
    link(rel="stylesheet", href="/css/codemirror.css")

    script(src="/js/firepad.js")
    link(rel="stylesheet", href="/css/firepad.css")

    link(rel="stylesheet", href="/css/editor.css")

    style.
        html { height: 100%; }
        body { margin: 0; height: 100%; }
        .firepad-userlist {
          position: absolute; left: 0; top: 0; bottom: 0; height: auto;
          width: 175px;
        }
        .firepad {
          position: absolute; left: 175px; top: 0; bottom: 0; right: 0; height: auto;
        }

  body

    div(class="firepad-userlist", ng-app="Editor")
      div(ng-controller='EditorCtrl')
        .firepad-userlist-heading
          span ONLINE
        .firepad-userlist-users
          div.firepad-userlist-user(ng-repeat="(netid, user) in users")
            .firepad-userlist-name {{user.name}}
            
    #firepad

    script(src="/js/editor.js")

