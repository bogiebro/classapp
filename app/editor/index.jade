html
  head
    meta(charset="utf-8")

    title Quipu Editor
    
    link(rel="stylesheet", href="/css/vendor.css")
    link(rel="stylesheet", href="/css/edit-vendor.css")
    link(rel="stylesheet", href="/css/editor.css")

  body
    div.visible-xs
      .jumbotron
        h1 Sorry
        p The quipu editor isn't available on mobile
    div.hidden-xs
      div(ng-app="Editor", ng-controller="EditorCtrl")
        nav.navbar.navbar-default.navbar-fixed-top.navbar-inverse
          .container-fluid
            .navbar-header
              a.navbar-brand(href) Quipu Editor: {{info.noteName.$value}}
            div(class="navbar-right", ng-repeat="(netid, user) in users")
              .square(tooltip="{{user.name}}", tooltip-placement="bottom")
                img(ng-src="{{user.pic}}", height="32", width="32")
      #firepad

        script(src="/js/vendor.js")
        script(src="/js/edit-vendor.js")
        script(src="https://cdn.firebase.com/v0/firebase.js")
        script(src='https://cdn.firebase.com/libs/angularfire/0.6.0/angularfire.min.js')
        script(src="/js/editor.js")

