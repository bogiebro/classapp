doctype 5
html(ng-app="MobileApp", manifest="mobile.appcache")
    head
        title Quipu

        link(rel='styesheet', href="/css/vendor.css")
        link(rel='stylesheet', href="/css/main.css")
    body
        div(ng-controller="ToolbarCtrl")
          div(ng-if="group.name").toolbar
            .back &lt;
            .title {{group.name}}
            .btn-group
              button(type="button", ng-click='goEvents()', class="btn btn-default") // events
                span(class="glyphicon glyphicon-th-list")
              button(type="button", ng-clock='goMembers()', class="btn btn-default") // members
                span(class="glyphicon glyphicon-user")
              button(type="button", ng-click='goChat()', class="btn btn-default") // chat
                span(class="glyphicon glyphicon-comment")
              button(type="button", ng-click='goFiles()', class="btn btn-default") // files
                span(class="glyphicon glyphicon-folder-open")
        div(ng-view)

        script(src='http://code.jquery.com/jquery-1.11.0.min.js')
        script(src='http://code.jquery.com/jquery-migrate-1.2.1.min.js')
        script(src='/js/vendor.js')
        script(src='https://cdn.firebase.com/v0/firebase.js')
        script(src='https://cdn.firebase.com/libs/angularfire/0.6.0/angularfire.min.js')
        script(src='/js/main.js')
        script(src='/js/app.main.templates.js')
