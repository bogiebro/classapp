.toolBarContainer div
  width 100%
  padding 0px


.toolBarContainer button
  background-color #f8f8f8
  width 39px !important
  margin 0px

.leftbar p
  margin-top 15px
  width 85%
  margin-left auto
  margin-right auto
  color #000000

.leftbar .collapseBtn
  float right
  margin-right 10px
  cursor pointer

.leftbar .list-group
  -webkit-border-radius 0px !important
  -moz-border-radius 0px !important
  border-radius 0px !important

.leftbar .list-group-item
  height 100px
  border-top-right-radius 0px
  border-top-left-radius 0px
  -webkit-border-radius 0px !important
  -moz-border-radius 0px !important
  border-radius 0px !important
  background-color #f8f8f8
  position relative
  -webkit-transition-duration: 0.5s;

.leftbar .list-group-item:hover
  background-color #ffffff
  cursor pointer

.leftbar .list-group-item .toolBarContainer
  position absolute
  bottom 5px
  right 0px
  width 100%
  padding 0px

.leftbar #toolIcon
  color gray
  size 9px
  margin-right 15px

.leftbar #toolIcon:hover
  color black

